{
  "name": "vibemarketing",
  "version": "1.0.0",
  "private": true,
  "description": "Vibe Marketing - AI-powered cold email campaign platform",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "start": "npm run start --workspace=frontend",
    "frontend": "npm run dev --workspace=frontend",
    "backend": "cd backend && ./venv/bin/uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "dev:all": "concurrently \"npm run frontend\" \"npm run backend\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
